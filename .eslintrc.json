{
	"extends": ["eslint:recommended"],
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": false
		}
	},
	"env": {
		"browser": true,
		"mocha": true,
		"node": true
	},
	"globals": {
		"Promise": true,
		"Proxy": true,
		"Reflect": true
	},
	"rules": {
		"eqeqeq": ["error", "smart"],
		"no-extra-boolean-cast": 0,
		"quotes": ["error", "double", { "allowTemplateLiterals": true }],
		"curly": ["error", "all"],
		"no-debugger": 1,
		"semi": [1, "always"],
		"prefer-template": "error",
		"one-var": ["error", "never"],
		"no-extra-semi": 1,
		"no-console": 0,
		"no-trailing-spaces": 0,
		"no-else-return": 0,
		"no-extra-bind": 0,
		"no-implicit-coercion": 0,
		"no-useless-call": 0,
		"no-return-assign": 0,
		"eol-last": 0,
		"no-unused-vars": 0,
		"no-underscore-dangle": 0,
		"no-lone-blocks": 0,
		"indent": 0
	}
}
